{
  "name": "newsmaker",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "setup": "rimraf node_modules && bun install && cp .env.example .env && npx simple-git-hooks",
    "dev": "next dev",
    "build": "prisma migrate deploy && prisma generate && next build",
    "start": "next start",
    "biome:check": "biome check .",
    "biome:apply": "biome check . --apply-unsafe",
    "format": "biome format .",
    "typecheck": "tsc",
    "setupForDB": "rimraf node_modules && bun install && cp .env.example .env && bun run db:up && bun run db:migrate && bun run db:seed && npx simple-git-hooks",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "bun run ./prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "test:unit": "bun test",
    "dev-deploy": "vercel",
    "prod-deploy": "vercel --prod",
    "deps:update": "bunx npm-check-updates --interactive --format group"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@mantine/core": "^7.12.0",
    "@mantine/dates": "^7.12.0",
    "@mantine/hooks": "^7.12.0",
    "@mantine/modals": "^7.12.0",
    "@prisma/client": "5.11.0",
    "@supabase/auth-helpers-nextjs": "^0.9.0",
    "@supabase/ssr": "^0.1.0",
    "@supabase/supabase-js": "^2.39.8",
    "@tanstack/react-query": "^4.18.0",
    "@trpc/client": "^10.45.2",
    "@trpc/next": "^10.45.2",
    "@trpc/react-query": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "dayjs": "^1.11.10",
    "firebase": "^10.12.5",
    "jsonwebtoken": "^9.0.2",
    "modern-screenshot": "^4.4.39",
    "next": "^14",
    "nextjs-routes": "^2.1.0",
    "react": "^18",
    "react-dom": "^18",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.51.1",
    "react-icons": "^5.0.1",
    "react-image-crop": "^11.0.6",
    "trpc-panel": "^1.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.1",
    "@mermaid-js/mermaid-cli": "^10.8.0",
    "@types/bun": "latest",
    "@types/firebase": "^3.2.1",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-dropzone": "^5.1.0",
    "@types/react-image-crop": "^8.1.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "postcss": "^8.4.38",
    "postcss-preset-mantine": "^1.13.0",
    "postcss-simple-vars": "^7.0.1",
    "prisma": "^5.11.0",
    "prisma-erd-generator": "^1.11.2",
    "rimraf": "^5.0.7",
    "simple-git-hooks": "^2.11.0",
    "typescript": "latest",
    "vercel": "latest"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run biome:apply",
    "pre-push": "bun run typecheck"
  }
}
